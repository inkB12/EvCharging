@page
@model EVCharging.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Lịch đặt của tôi";
    var nowUtc = DateTime.UtcNow;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<style>
    .page-wrap {
        padding: 24px
    }

    .card-rounded {
        border-radius: 16px
    }

    .tag {
        display: inline-block;
        padding: .25rem .6rem;
        border-radius: 999px;
        font-size: .78rem;
        border: 1px solid transparent
    }

    .tag-success {
        background: #e7f7ee;
        color: #207a43;
        border-color: #cfeeda
    }

    .tag-ongoing {
        background: #f5f5ff;
        color: #3b45a6;
        border-color: #e1e4ff
    }

    .tag-cancelled {
        background: #fff1f0;
        color: #a61b1b;
        border-color: #ffd3cf
    }
</style>

<div class="page-wrap container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0 fw-semibold">Lịch đặt của tôi</h2>
        <div>
            @if (TempData["Info"] is string info)
            {
                <div class="alert alert-success py-2 px-3 mb-0">@info</div>
            }
            @if (TempData["Error"] is string err)
            {
                <div class="alert alert-danger py-2 px-3 mb-0">@err</div>
            }
        </div>
    </div>

    <!-- Filter bar -->
    <form method="get" class="card card-rounded p-3 mb-4 shadow-sm">
        <div class="row g-3 align-items-end">
            <div class="col-sm-4 col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input class="form-control" type="text" name="Q" value="@Model.Q" placeholder="Tên trạm / địa chỉ / loại cổng" />
            </div>
            <div class="col-sm-3 col-md-2">
                <label class="form-label">Trạng thái</label>
                <select class="form-select" name="Status">
                    <option value="">-- Tất cả --</option>
                    <option value="ongoing" selected="@(Model.Status == "ongoing")">ongoing</option>
                    <option value="success" selected="@(Model.Status == "success")">success</option>
                    <option value="cancelled" selected="@(Model.Status == "cancelled")">cancelled</option>
                </select>
            </div>
            <div class="col-sm-2 col-md-2">
                <label class="form-label">Từ ngày</label>
                <input class="form-control" type="date" name="From" value="@(Model.From?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-sm-2 col-md-2">
                <label class="form-label">Đến ngày</label>
                <input class="form-control" type="date" name="To" value="@(Model.To?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-sm-3 col-md-2 d-flex gap-2">
                <button class="btn btn-primary flex-fill">Lọc</button>
                <a class="btn btn-outline-secondary" href="@Url.Page(null)">Reset</a>
            </div>
        </div>
    </form>

    <!-- Table -->
    <div class="card card-rounded shadow-sm">
        @if (Model.Items.Count == 0)
        {
            <div class="p-4 text-muted text-center">Không tìm thấy lịch đặt nào phù hợp.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Trạm</th>
                            <th>Địa chỉ</th>
                            <th>Cổng</th>
                            <th>Thời gian</th>
                            <th>Trạng thái</th>
                            <th class="text-muted">Giá</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model.Items)
                        {
                            var status = (x.Status ?? "").ToLowerInvariant();
                            var tagClass = status switch
                            {
                                "success" => "tag tag-success",
                                "cancelled" => "tag tag-cancelled",
                                _ => "tag tag-ongoing"
                            };
                            var canCancel =
                            string.Equals(x.Status, "ongoing", StringComparison.OrdinalIgnoreCase)
                            && x.StartTime.HasValue && x.StartTime.Value > nowUtc;

                            <tr>
                                <td class="fw-semibold">@x.StationName</td>
                                <td class="text-muted">@x.StationLocation</td>
                                <td>@x.PortType</td>
                                <td>
                                    @((x.StartTime?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")) ?? "-")
                                    – @((x.EndTime?.ToLocalTime().ToString("HH:mm")) ?? "-")
                                </td>
                                <td><span class="@tagClass text-capitalize">@x.Status</span></td>
                                <td class="text-muted">@x.Price.ToString("N0") ₫</td>
                                <td class="text-end">
                                    @if (canCancel)
                                    {
                                        <form method="post" asp-page-handler="Cancel" class="d-inline">
                                            <input type="hidden" name="id" value="@x.BookingId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Bạn chắc muốn hủy lịch này?');">
                                                Hủy
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled>Hủy</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
