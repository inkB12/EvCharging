@page "{id:int}"
@model EVCharging.Pages.Booking.DetailModel
@{
    ViewData["Title"] = "Chi tiết Lịch đặt";
    var b = Model.Item!; // Lấy model
}

<!-- XÓA: Link Bootstrap (đã có trong Layout) -->
<!-- Bọc nội dung trong .container-narrow (class của _Layout.cshtml) -->
<div class="container container-narrow my-4">

    <!-- Tiêu đề và Trạng thái -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold mb-0">Booking #@b.BookingId</h1>
            <p class="text-muted fs-5">Chi tiết lịch đặt và thanh toán của bạn.</p>
        </div>
        <!-- Badge (Nhãn) Trạng thái -->
        @if (b.Status == "success")
        {
            <span class="badge fs-6 rounded-pill bg-success-subtle text-success-emphasis">
                <i class="bi bi-check-circle me-1"></i> Thành công
            </span>
        }
        else if (b.Status == "cancelled")
        {
            <span class="badge fs-6 rounded-pill bg-danger-subtle text-danger-emphasis">
                <i class="bi bi-x-circle me-1"></i> Đã hủy
            </span>
        }
        else
        {
            <span class="badge fs-6 rounded-pill bg-primary-subtle text-primary-emphasis">
                <i class="bi bi-clock me-1"></i> Đang diễn ra
            </span>
        }
    </div>

    <div class="row g-4">
        <!-- CỘT TRÁI (Nội dung chính) -->
        <div class="col-lg-8">

            <!-- CARD 1: CHI TIẾT PHIÊN SẠC -->
            <div class="card shadow-sm mb-4 detail-summary-card">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt-cutoff text-primary me-2"></i>
                        Thông tin Phiên sạc
                    </h5>
                </div>
                <div class="card-body">
                    @if (b.Sessions.Count == 0)
                    {
                        <div class="text-muted text-center p-3">Chưa có session nào.</div>
                    }
                    else
                    {
                        <!-- Dùng List Group thay vì Table -->
                        <ul class="list-group list-group-flush">
                            @foreach (var s in b.Sessions.OrderBy(x => x.SessionId))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>Trạm: @s.StationName</strong>
                                        <span class="d-block small text-muted">@s.StationLocation</span>
                                    </div>
                                    <span class="badge bg-dark">@s.PortType</span>
                                </li>
                                <li class="list-group-item">
                                    <strong>Trạng thái:</strong>
                                    <span class="badge text-bg-@(s.Status == "success" ? "success" : s.Status == "ongoing" ? "primary" : "secondary")">
                                        @s.Status
                                    </span>
                                </li>
                                <li class="list-group-item">
                                    <strong>Thời gian sạc:</strong>
                                    <span>
                                        @(s.StartTime.HasValue ? s.StartTime.Value.ToLocalTime().ToString("g") : "-")
                                        →
                                        @(s.EndTime.HasValue ? s.EndTime.Value.ToLocalTime().ToString("g") : "-")
                                    </span>
                                </li>
                                <li class="list-group-item">
                                    <strong>Năng lượng tiêu thụ:</strong>
                                    <span class="fw-bold text-success">
                                        @(s.EnergyConsumedKwh?.ToString("N3") ?? "-") kWh
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>

            <!-- CARD 2: CHI TIẾT GIAO DỊCH -->
            <div class="card shadow-sm mb-4 detail-summary-card">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-wallet-fill text-primary me-2"></i>
                        Thông tin Giao dịch
                    </h5>
                </div>
                <div class="card-body">
                    @if (b.Transactions.Count == 0)
                    {
                        <div class="text-muted text-center p-3">Chưa có giao dịch nào.</div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var t in b.Transactions.OrderBy(x => x.Datetime))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@t.PaymentMethod (ID: #@t.Id)</strong>
                                        <span class="d-block small text-muted">
                                            Ngày: @(t.Datetime != default ? t.Datetime.ToLocalTime().ToString("g") : "-")
                                        </span>
                                    </div>
                                    <div>
                                        <span class="badge text-bg-@(t.Status == "success" ? "success" : t.Status == "ongoing" ? "primary" : "secondary")">
                                            @t.Status
                                        </span>
                                        <strong class="text-dark ms-2">@t.Total.ToString("N0") ₫</strong>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>

        <!-- CỘT PHẢI (Thông tin thêm & Hỗ trợ) -->
        <div class="col-lg-4">
            <!-- CARD 3: TÓM TẮT BOOKING -->
            <div class="card shadow-sm mb-4 detail-summary-card">
                <div class="card-body">
                    <h5 class="mb-3">Tóm tắt Lịch đặt</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0">
                            <i class="bi bi-calendar-check-fill"></i>
                            <strong>Giờ đặt (Bắt đầu)</strong>
                            <span>@((b.StartTime?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")) ?? "-")</span>
                        </li>
                        <li class="list-group-item px-0">
                            <i class="bi bi-clock-fill"></i>
                            <strong>Giờ đặt (Kết thúc)</strong>
                            <span>@((b.EndTime?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")) ?? "-")</span>
                        </li>
                        <li class="list-group-item px-0">
                            <i class="bi bi-cash-coin"></i>
                            <strong>Đơn giá</strong>
                            <span>@b.Price.ToString("N0") ₫ / kWh</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- CARD 4: HỖ TRỢ (Theo yêu cầu) -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="bi bi-question-circle-fill text-primary me-2"></i>
                        Bạn cần hỗ trợ?
                    </h5>
                    <p class="text-muted small">Nếu có bất kỳ vấn đề gì với lịch đặt này, vui lòng liên hệ chúng tôi để được hỗ trợ 24/7.</p>
                    <a href="#" class="btn btn-outline-primary w-100">
                        <i class="bi bi-telephone me-1"></i> Gọi 1900 1234
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Trang này không cần script đặc biệt, trừ khi bạn muốn thêm lại Modal Hủy -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}