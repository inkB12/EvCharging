@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var http = HttpContextAccessor?.HttpContext;
    var session = http?.Session;

    string? userName = session?.GetString("User.FullName");
    string? userEmail = session?.GetString("User.Email");
    string? userRole = session?.GetString("User.Role");
    int? homeId = session?.GetInt32("User.HomeStationId");

    bool isLoggedIn = !string.IsNullOrWhiteSpace(userEmail);

    string path = http?.Request?.Path.Value?.ToLowerInvariant() ?? "/";
    string Active(string startsWith) => path.StartsWith(startsWith, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    string Initials(string? nameOrEmail)
    {
        if (string.IsNullOrWhiteSpace(nameOrEmail)) return "?";
        var s = nameOrEmail.Trim();
        var parts = s.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return (char.ToUpper(parts[0][0]) + "" + char.ToUpper(parts[1][0]));
        return char.ToUpper(s[0]).ToString();
    }
}

<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVCharging</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVCharging.styles.css" asp-append-version="true" />

    <!-- === CSS ĐÃ THIẾT KẾ LẠI CHO HEADER SÁNG === -->
    <style>
        /* ===== Header (Sáng) ===== */
        .app-navbar {
            background-color: #ffffff; /* Nền trắng */
            border-bottom: 1px solid #e9ecef; /* Viền mỏng "xịn" */
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: 700; /* Chữ logo đậm */
            font-size: 1.25rem;
            color: #212529 !important; /* Chữ logo màu đen */
        }

        /* Logo Badge (Giữ nguyên vì nó đẹp trên nền trắng) */
        .brand-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            border-radius: 8px;
            background: linear-gradient(135deg, #18e07f, #39c2ff);
            color: #0b1020;
            font-weight: 900;
            margin-right: 8px;
        }

        /* Nav link (chữ đen) */
        .nav-link {
            border-radius: 10px;
            padding: .45rem .8rem;
            color: #495057 !important; /* Chữ đen nhạt */
            font-weight: 500;
            transition: all 0.2s ease;
        }

            /* Hiệu ứng hover cho link */
            .nav-link:hover {
                color: #000 !important;
                background-color: #f1f1f1;
            }

            /* Link đang active */
            .nav-link.active {
                color: #0d6efd !important; /* Màu xanh primary */
                background-color: #e7f0ff; /* Nền xanh nhạt */
            }

        /* User Chip (Đã đăng nhập) - Nền sáng */
        .user-chip {
            display: inline-flex;
            align-items: center;
            gap: .6rem;
            background: #f1f1f1; /* Nền xám nhạt */
            border: 1px solid #dee2e6; /* Viền xám */
            border-radius: 999px;
            padding: .35rem .8rem .35rem .35rem;
            color: #212529; /* Chữ đen */
            transition: all 0.2s ease;
        }

            .user-chip:hover {
                background-color: #e9ecef;
            }

        /* Avatar (Giữ nguyên) */
        .user-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: linear-gradient(135deg, #39c2ff, #18e07f);
            color: #0b1020;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 12px rgba(24,224,127,.25);
        }

        /* Chữ (Tên, Email) - Nền sáng */
        .user-meta {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

            .user-meta .name {
                font-weight: 700;
                font-size: .9rem;
                color: #212529; /* Chữ đen */
            }

            .user-meta .email {
                font-size: .78rem;
                color: #6c757d; /* Chữ xám */
            }

        /* Badge (Role) - Nền sáng */
        .badge-soft {
            background: #e2f3ff;
            border: 1px solid #b6dfff;
            color: #0d6efd; /* Chữ xanh */
            font-weight: 600;
        }

        /* Nút Logout */
        .nav-cta .btn-logout {
            border-radius: 10px;
            border: 1px solid #ced4da;
            color: #495057 !important; /* Chữ xám */
        }

            .nav-cta .btn-logout:hover {
                background-color: #f1f1f1;
                color: #212529 !important;
            }

        /* Nút Login (Bắt mắt) */
        .btn-login {
            font-weight: 600;
            border-radius: 50px; /* Bo tròn */
            padding-left: 1.25rem;
            padding-right: 1.25rem;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.2);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(13, 110, 253, 0.3);
            }


        /* ===== Body (light) ===== */
        body {
            background: #ffffff;
            color: #212529;
        }

        .container-narrow {
            max-width: 1140px; /* Rộng hơn 1080px một chút */
        }

        main {
            background: #ffffff;
        }

        /* ===== Footer (dark) ===== */
        /* Giữ nguyên footer tối của bạn vì nó đẹp */
        footer.footer {
            background: #0b1020;
            border-top: 1px solid rgba(255,255,255,0.06);
            color: #e9f2ff;
        }

            footer.footer a {
                color: #cfe7ff;
                text-decoration: none;
            }

                footer.footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!--
      HEADER ĐÃ THIẾT KẾ LẠI
    -->
    <header class="app-navbar sticky-top">
        <!-- SỬA Ở ĐÂY: navbar-dark -> navbar-light -->
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container container-narrow">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index" title="Trang chủ">
                    <span class="brand-badge">EV</span> EVCharging
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("/map")" asp-page="/Map/Index">
                                    <i class="bi bi-geo-alt me-1"></i> Book
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Active("/booking")" asp-page="/Booking/Index">
                                    <i class="bi bi-calendar2-check me-1"></i> History
                                </a>
                            </li>
                            <!-- (Các link khác của bạn ở đây) -->

                            <li class="nav-item">
                                <a class="nav-link @Active("/driver/ChargingHabitsReport")" asp-page="/Driver/ChargingHabitsReport">
                                    <i class="bi bi-graph-up-arrow me-1"></i> Thói quen
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("/driver/MonthlyCostReport")" asp-page="/Driver/MonthlyCostReport">
                                    <i class="bi bi-wallet me-1"></i> Chi tiêu
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- NÚT BẤM (ĐÃ CẬP NHẬT) -->
                    <div class="d-flex align-items-center gap-2 nav-cta">
                        @if (isLoggedIn)
                        {
                            <!-- User Chip (Đã sửa CSS) -->
                            <a asp-page="/Account/Profile" class="text-decoration-none" title="Trang cá nhân">
                                <div class="user-chip">
                                    <div class="user-avatar" title="@userRole">@Initials(userName ?? userEmail)</div>
                                    <div class="user-meta">
                                        <div class="name">
                                            @(!string.IsNullOrWhiteSpace(userName) ? userName : userEmail)
                                            @if (!string.IsNullOrWhiteSpace(userRole) && userRole != "User")
                                            {
                                                <span class="badge badge-soft ms-1">@userRole</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrWhiteSpace(userName) && !string.IsNullOrWhiteSpace(userEmail))
                                        {
                                            <div class="email">@userEmail</div>
                                        }
                                    </div>
                                </div>
                            </a>
                            <!-- Nút Logout (Đã sửa) -->
                            <a class="btn btn-outline-secondary btn-logout ms-2" asp-page="/Auth/Logout" title="Đăng xuất">
                                <i class="bi bi-box-arrow-right"></i>
                            </a>
                        }
                        else
                        {
                            <!-- Nút Login (Bắt mắt) -->
                            <a class="btn btn-primary btn-login" asp-page="/Auth/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- NỘI DUNG CHÍNH (Giữ nguyên) -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER (Giữ nguyên) -->
    <footer class="footer text-muted py-3">
        <div class="container container-narrow d-flex justify-content-between">
            <div>&copy; 2025 - EVCharging</div>
            <div>
                <a asp-area="" asp-page="/Privacy" class="link-underline-opacity-0">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>