@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var http = HttpContextAccessor?.HttpContext;
    var session = http?.Session;

    string? userName = session?.GetString("User.FullName");
    string? userEmail = session?.GetString("User.Email");
    string? userRole = session?.GetString("User.Role");
    int? homeId = session?.GetInt32("User.HomeStationId");

    bool isLoggedIn = !string.IsNullOrWhiteSpace(userEmail);

    string path = http?.Request?.Path.Value?.ToLowerInvariant() ?? "/";
    string Active(string startsWith) => path.StartsWith(startsWith, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    string Initials(string? nameOrEmail)
    {
        if (string.IsNullOrWhiteSpace(nameOrEmail)) return "?";
        var s = nameOrEmail.Trim();
        var parts = s.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return (char.ToUpper(parts[0][0]) + "" + char.ToUpper(parts[1][0]));
        return char.ToUpper(s[0]).ToString();
    }
}

<!DOCTYPE html>
<html lang="vi" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVCharging</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVCharging.styles.css" asp-append-version="true" />

    <style>
        /* ===== Header (dark) ===== */
        .app-navbar {
            background: linear-gradient(135deg, #0c1224, #0b1020);
            border-bottom: 1px solid rgba(255,255,255,0.06);
        }

        .navbar-brand {
            font-weight: 800;
            letter-spacing: .3px;
        }

        .brand-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 28px;
            height: 28px;
            border-radius: 8px;
            background: linear-gradient(135deg, #18e07f, #39c2ff);
            color: #0b1020;
            font-weight: 900;
            margin-right: 8px;
        }

        .nav-link {
            border-radius: 10px;
            padding: .45rem .8rem;
        }

            .nav-link.active {
                background: rgba(24,224,127,0.18);
                border: 1px solid rgba(24,224,127,0.45);
            }

        .user-chip {
            display: inline-flex;
            align-items: center;
            gap: .6rem;
            background: #0f162b;
            border: 1px solid #28385f;
            border-radius: 999px;
            padding: .35rem .8rem .35rem .35rem;
            color: #fff;
        }

        .user-avatar {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background: linear-gradient(135deg, #39c2ff, #18e07f);
            color: #0b1020;
            font-weight: 800;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 12px rgba(24,224,127,.25);
        }

        .user-meta {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

            .user-meta .name {
                font-weight: 700;
                font-size: .9rem;
                color: #fff;
            }

            .user-meta .email {
                font-size: .78rem;
                opacity: .95;
                color: #cfe7ff;
            }

        .nav-cta .btn-logout {
            border-radius: 10px;
            border: 1px solid rgba(255,255,255,.35);
            color: #fff;
        }

        /* Force white text in dark header */
        .navbar-dark .navbar-brand,
        .navbar-dark .nav-link,
        .navbar-dark .navbar-toggler,
        .navbar-dark .navbar-text,
        .navbar-dark .nav-link i,
        .nav-cta .btn-logout {
            color: #ffffff !important;
            opacity: 1 !important;
        }

        .navbar-dark .navbar-toggler-icon {
            filter: invert(1) brightness(1.8);
        }

        /* ===== Body (light / trắng) ===== */
        body {
            background: #ffffff;
            color: #212529;
        }

        .container-narrow {
            max-width: 1080px;
        }

        main {
            background: #ffffff;
        }

        /* ===== Footer (dark) ===== */
        footer.footer {
            background: #0b1020;
            border-top: 1px solid rgba(255,255,255,0.06);
            color: #e9f2ff;
        }

            footer.footer a {
                color: #cfe7ff;
                text-decoration: none;
            }

                footer.footer a:hover {
                    text-decoration: underline;
                }

        /* Soft badge (for role) */
        .badge-soft {
            background: rgba(57,194,255,.15);
            border: 1px solid rgba(57,194,255,.35);
            color: #dff4ff;
        }
    </style>
</head>
<body>
    <header class="app-navbar">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container container-narrow">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index" title="Trang chủ">
                    <span class="brand-badge">EV</span> EVCharging
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link @Active("/map")" asp-page="/Map/Index">
                                    <i class="bi bi-geo-alt me-1"></i> Book
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("/booking")" asp-page="/Booking/Index">
                                    <i class="bi bi-calendar2-check me-1"></i> History
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("/driver/ChargingHabitsReport")" asp-page="/Driver/ChargingHabitsReport">
                                    <i class="bi bi-graph-up-arrow me-1"></i> Thói quen
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @Active("/driver/MonthlyCostReport")" asp-page="/Driver/MonthlyCostReport">
                                    <i class="bi bi-wallet me-1"></i> Chi tiêu
                                </a>
                            </li>
                            
                            <li class="nav-item">
                                <a class="nav-link @Active("/account")" href="@Url.Content("~/Account/Profile")">
                                    <i class="bi bi-person-circle me-1"></i> Profile
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center gap-2 nav-cta">
                        @if (isLoggedIn)
                        {
                            <div class="user-chip">
                                <div class="user-avatar" title="@userRole">@Initials(userName ?? userEmail)</div>
                                <div class="user-meta">
                                    <div class="name">
                                        @(!string.IsNullOrWhiteSpace(userName) ? userName : userEmail)
                                        @if (!string.IsNullOrWhiteSpace(userRole) && userRole != "User")
                                        {
                                            <span class="badge badge-soft ms-1">@userRole</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrWhiteSpace(userName) && !string.IsNullOrWhiteSpace(userEmail))
                                    {
                                        <div class="email">@userEmail</div>
                                    }
                                </div>
                                @if (homeId.HasValue)
                                {
                                    <span class="badge rounded-pill ms-1" style="background:rgba(24,224,127,.2); border:1px solid rgba(24,224,127,.45); color:#dfffea;">
                                        Home: #@homeId.Value
                                    </span>
                                }
                            </div>

                            <a class="btn btn-outline-light btn-logout ms-2" asp-page="/Auth/Logout" title="Đăng xuất">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-success" asp-page="/Auth/Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container container-narrow my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted py-3">
        <div class="container container-narrow d-flex justify-content-between">
            <div>&copy; 2025 - EVCharging</div>
            <div>
                <a asp-area="" asp-page="/Privacy" class="link-underline-opacity-0">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
