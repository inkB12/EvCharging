@page
@model EVCharging.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Hồ sơ của tôi";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h2 class="mb-3">Hồ sơ của tôi</h2>

    @if (TempData["Info"] is string info)
    {
        <div class="alert alert-success">@info</div>
    }
    @if (TempData["Error"] is string err)
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row g-4">
        <!-- Thông tin cá nhân -->
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Thông tin</strong>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="Update" class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Email (không thể đổi)</label>
                            <input class="form-control" value="@Model.Profile?.Email" disabled />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Họ và tên</label>
                            <input class="form-control" asp-for="ProfileInput.FullName" placeholder="Nguyễn Văn A" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Số điện thoại</label>
                            <input class="form-control" asp-for="ProfileInput.Phone" placeholder="0123..." />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Trạm ưa thích (Home Station)</label>
                            <select class="form-select" asp-for="ProfileInput.HomeStationId">
                                <option value="">-- Không chọn --</option>
                                @foreach (var s in Model.Stations)
                                {
                                    <option value="@s.Id" selected="@(Model.Profile?.HomeStationId==s.Id)">
                                        @s.Name (@s.Location)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary">Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Đổi mật khẩu -->
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Đổi mật khẩu</strong>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="ChangePassword" class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Mật khẩu hiện tại</label>
                            <input class="form-control" asp-for="PasswordInput.CurrentPassword" type="password" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Mật khẩu mới</label>
                            <input class="form-control" asp-for="PasswordInput.NewPassword" type="password" />
                            <div class="form-text">Tối thiểu 6 ký tự.</div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-outline-primary">Đổi mật khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
