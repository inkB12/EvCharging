@page "{id:int}"
@model EVCharging.Pages.Admin.AdminStationPage.DetailsModel
@{
    Layout = "_AdminLayout";
}
<div class="container">
    <h3 class="fw-bold mb-4 text-light"><i class="fa-solid fa-circle-info text-info me-2"></i>Chi tiết Trạm sạc</h3>

    <div class="card p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3">Tên trạm:</dt>
            <dd class="col-sm-9">@Model.Station.Name</dd>

            <dt class="col-sm-3">Vị trí:</dt>
            <dd class="col-sm-9">@Model.Station.Location</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">@Model.Station.Status</dd>

            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Station.Description</dd>
        </dl>

        <div class="text-end mt-3">
            <a asp-page="Index" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
        </div>
    </div>
</div>