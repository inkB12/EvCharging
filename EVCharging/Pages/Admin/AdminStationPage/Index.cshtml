@page
@model EVCharging.Pages.Admin.AdminStationPage.IndexModel
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-light"><i class="fa-solid fa-tower-broadcast me-2 text-info"></i>Quản lý Trạm sạc</h3>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Thêm trạm sạc
        </a>
    </div>

    <div class="card p-3">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="table-secondary text-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên trạm</th>
                    <th>Vị trí</th>
                    <th>Trạng thái</th>
                    <th>Mô tả</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Stations != null && Model.Stations.Any())
                {
                    foreach (var s in Model.Stations)
                    {
                        <tr>
                            <td>@s.Id</td>
                            <td>@s.Name</td>
                            <td>@s.Location</td>
                            <td>
                                @if (s.Status == "online")
                                {
                                    <span class="badge bg-success">Online</span>
                                }
                                else if (s.Status == "offline")
                                {
                                    <span class="badge bg-danger">Offline</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Bảo trì</span>
                                }
                            </td>
                            <td>@s.Description</td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@s.Id" class="btn btn-outline-info btn-sm me-1">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@s.Id" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-secondary">Chưa có trạm sạc nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>