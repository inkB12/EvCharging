@page "{id:int}"
@model EVCharging.Pages.Admin.AdminStationPage.EditModel
@{
    Layout = "_AdminLayout";
}


<div class="container">
    <h3 class="fw-bold mb-4 text-light"><i class="fa-solid fa-pen-to-square text-warning me-2"></i>Chỉnh sửa thông tin trạm</h3>

    <div class="card p-4">
        <form method="post">
            <input type="hidden" asp-for="Station.Id" />

            <div class="mb-3">
                <label class="form-label">Tên trạm sạc</label>
                <input asp-for="Station.Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Vị trí</label>
                <input asp-for="Station.Location" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Station.Description" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Trạng thái</label>
                <select asp-for="Station.Status" class="form-select">
                    <option value="online">Online</option>
                    <option value="offline">Offline</option>
                    <option value="maintenance">Bảo trì</option>
                </select>
            </div>

            <div class="text-end">
                <a asp-page="Index" class="btn btn-secondary me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-warning"><i class="fa-solid fa-save"></i> Cập nhật</button>
            </div>
        </form>
    </div>
</div>