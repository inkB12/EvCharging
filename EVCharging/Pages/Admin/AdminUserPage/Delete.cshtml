@page "{id:int}"
@model EVCharging.Pages.Admin.AdminUserPage.DeleteModel
@{
    Layout = "_AdminLayout";
}


<div class="container-fluid col-md-6">
    <h3 class="fw-bold text-light mb-4">
        <i class="fa-solid fa-trash text-danger me-2"></i>Xác nhận xóa người dùng
    </h3>

    <div class="card p-4">
        <p>Bạn có chắc chắn muốn xóa người dùng <strong>@Model.User.FullName</strong> không?</p>

        <form method="post">
            <input type="hidden" asp-for="User.Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa-solid fa-trash"></i> Xóa
            </button>
            <a asp-page="Index" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>