@page
@model EVCharging.Pages.Admin.AdminUserPage.IndexModel
@{
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-light">
            <i class="fa-solid fa-users me-2 text-info"></i>Quản lý Người dùng & Quyền hạn
        </h3>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Thêm người dùng
        </a>
    </div>

    <div class="card p-3">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="table-secondary text-dark">
                <tr>
                    <th>ID</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Quyền</th>
                    <th>Gói dịch vụ</th>
                    <th>Trạm chính</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users != null && Model.Users.Any())
                {
                    foreach (var u in Model.Users)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.FullName</td>
                            <td>@u.Email</td>
                            <td>@u.Phone</td>
                            <td>
                                @if (u.Role == "admin")
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else if (u.Role == "staff")
                                {
                                    <span class="badge bg-warning text-dark">Nhân viên</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Tài xế</span>
                                }
                            </td>
                            <td>@(u.ServicePlanName ?? "-")</td>
                            <td>@(u.HomeStationName ?? "-")</td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@u.Id" class="btn btn-outline-info btn-sm me-1">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@u.Id" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@u.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-secondary">Chưa có người dùng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>