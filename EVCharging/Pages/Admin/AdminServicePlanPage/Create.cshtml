@page
@model EVCharging.Pages.Admin.AdminServicePlanPage.CreateModel
@{
    Layout = "_AdminLayout";
}


<div class="container">
    <h3 class="fw-bold mb-4 text-light"><i class="fa-solid fa-plus text-primary me-2"></i>Thêm gói dịch vụ mới</h3>

    <div class="card p-4">
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Tên gói</label>
                <input asp-for="Plan.Name" class="form-control" placeholder="Nhập tên gói..." />
            </div>

            <div class="mb-3">
                <label class="form-label">Giá (VNĐ)</label>
                <input asp-for="Plan.Price" type="number" step="1000" class="form-control" placeholder="Nhập giá..." />
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Plan.Description" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
            </div>

            <div class="text-end">
                <a asp-page="Index" class="btn btn-secondary me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-check"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>