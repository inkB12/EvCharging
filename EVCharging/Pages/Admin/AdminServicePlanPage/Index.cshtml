@page
@model EVCharging.Pages.Admin.AdminServicePlanPage.IndexModel
@{
    Layout = "_AdminLayout";
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-light"><i class="fa-solid fa-bolt text-warning me-2"></i>Quản lý Gói dịch vụ</h3>
        <a asp-page="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i> Thêm gói dịch vụ
        </a>
    </div>

    <div class="card p-3">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="table-secondary text-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên gói</th>
                    <th>Giá (VNĐ)</th>
                    <th>Mô tả</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Plans != null && Model.Plans.Any())
                {
                    foreach (var plan in Model.Plans)
                    {
                        <tr>
                            <td>@plan.Id</td>
                            <td>@plan.Name</td>
                            <td>@string.Format("{0:N0}", plan.Price)</td>
                            <td>@plan.Description</td>
                            <td class="text-center">
                                <a asp-page="Details" asp-route-id="@plan.Id" class="btn btn-outline-info btn-sm me-1">
                                    <i class="fa-solid fa-circle-info"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@plan.Id" class="btn btn-outline-warning btn-sm me-1">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@plan.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-secondary">Chưa có gói dịch vụ nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>