@page "{id:int}"
@model EVCharging.Pages.Admin.AdminServicePlanPage.EditModel
@{
    Layout = "_AdminLayout";
}


<div class="container">
    <h3 class="fw-bold mb-4 text-light"><i class="fa-solid fa-pen-to-square text-warning me-2"></i>Chỉnh sửa gói dịch vụ</h3>

    <div class="card p-4">
        <form method="post">
            <input type="hidden" asp-for="Plan.Id" />

            <div class="mb-3">
                <label class="form-label">Tên gói</label>
                <input asp-for="Plan.Name" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Giá (VNĐ)</label>
                <input asp-for="Plan.Price" type="number" step="1000" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Mô tả</label>
                <textarea asp-for="Plan.Description" class="form-control"></textarea>
            </div>

            <div class="text-end">
                <a asp-page="Index" class="btn btn-secondary me-2"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-warning"><i class="fa-solid fa-save"></i> Cập nhật</button>
            </div>
        </form>
    </div>
</div>