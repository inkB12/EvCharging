@page
@model EVCharging.Pages.Admin.ServicePlans.IndexModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý Gói Dịch Vụ";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-secondary"><i class="fa-solid fa-tags me-2"></i>Danh sách Gói Dịch Vụ</h2>
    <a asp-page="Create" class="btn btn-gradient px-4 py-2">
        <i class="fa-solid fa-plus me-1"></i> Thêm gói mới
    </a>
</div>

<table class="table table-hover shadow-sm bg-white rounded">
    <thead class="table-light">
        <tr>
            <th>Tên gói</th>
            <th>Mô tả</th>
            <th>Giá (₫)</th>
            <th>Trạng thái</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ServicePlans)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("N0")</td>
                <td>
                    @if (!item.IsDeleted)
                    {
                        <span class="badge bg-success">Đang hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Đã dừng hoạt động</span>
                    }
                </td>
                <td class="text-center">
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-page="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">
                        <i class="fa-solid fa-eye"></i>
                    </a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #8b5cf6, #ec4899);
        color: #fff;
        border: none;
    }

        .btn-gradient:hover {
            opacity: 0.9;
        }
</style>