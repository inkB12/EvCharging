@page "{id:int}"
@model EVCharging.Pages.Admin.ServicePlans.EditModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Chỉnh sửa gói dịch vụ";
}

<h2 class="fw-bold text-secondary mb-4"><i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh sửa Gói Dịch Vụ</h2>

<form method="post" class="shadow-sm bg-white p-4 rounded">
    <input type="hidden" asp-for="Input.Id" />

    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label fw-semibold">Tên gói</label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label fw-semibold">Mô tả</label>
        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Price" class="form-label fw-semibold">Giá (₫)</label>
        <input asp-for="Input.Price" type="number" class="form-control" min="0" />
        <span asp-validation-for="Input.Price" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-page="Index" class="btn btn-outline-secondary me-2">Quay lại</a>
        <button type="submit" class="btn btn-gradient px-4">Cập nhật</button>
    </div>
</form>