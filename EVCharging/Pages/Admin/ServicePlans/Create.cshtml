@page
@model EVCharging.Pages.Admin.ServicePlans.CreateModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Thêm gói dịch vụ";
}


<h2 class="fw-bold text-secondary mb-4"><i class="fa-solid fa-plus-circle me-2"></i>Thêm Gói Dịch Vụ</h2>

<form method="post" class="shadow-sm bg-white p-4 rounded">
    <div class="mb-3">
        <label asp-for="Input.Name" class="form-label fw-semibold">Tên gói</label>
        <input asp-for="Input.Name" class="form-control" placeholder="Nhập tên gói..." />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Description" class="form-label fw-semibold">Mô tả</label>
        <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Price" class="form-label fw-semibold">Giá (₫)</label>
        <input asp-for="Input.Price" type="number" class="form-control" placeholder="0" min="0" />
        <span asp-validation-for="Input.Price" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <a asp-page="Index" class="btn btn-outline-secondary me-2">Quay lại</a>
        <button type="submit" class="btn btn-gradient px-4">Lưu</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #8b5cf6, #ec4899);
        color: #fff;
        border: none;
    }

        .btn-gradient:hover {
            opacity: 0.9;
        }
</style>