@page "{id:int}"
@model EVCharging.Pages.Admin.AdminFaultReportPage.EditModel
@{
    Layout = "_AdminLayout";
}


<div class="container-fluid col-md-8">
    <h3 class="fw-bold text-light mb-4">
        <i class="fa-solid fa-pen text-warning me-2"></i>Chỉnh sửa báo lỗi
    </h3>

    <div class="card p-4">
        <form method="post">
            <input type="hidden" asp-for="FaultReport.Id" />

            <div class="mb-3">
                <label asp-for="FaultReport.Title" class="form-label">Tiêu đề</label>
                <input asp-for="FaultReport.Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label asp-for="FaultReport.Description" class="form-label">Mô tả</label>
                <textarea asp-for="FaultReport.Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="FaultReport.Severity" class="form-label">Mức độ nghiêm trọng</label>
                <input asp-for="FaultReport.Severity" class="form-control" type="number" min="1" max="5" />
            </div>

            <div class="mb-3">
                <label asp-for="FaultReport.Status" class="form-label">Trạng thái</label>
                <select asp-for="FaultReport.Status" class="form-select">
                    <option value="open">Open</option>
                    <option value="closed">Closed</option>
                </select>
            </div>

            <button type="submit" class="btn btn-warning">
                <i class="fa-solid fa-save"></i> Cập nhật
            </button>
            <a asp-page="Index" class="btn btn-secondary ms-2">Hủy</a>
        </form>
    </div>
</div>