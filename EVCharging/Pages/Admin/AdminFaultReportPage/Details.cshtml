@page "{id:int}"
@model EVCharging.Pages.Admin.AdminFaultReportPage.DetailsModel
@{
    Layout = "_AdminLayout";
}


<div class="container-fluid col-md-7">
    <h3 class="fw-bold text-light mb-4">
        <i class="fa-solid fa-circle-info text-info me-2"></i>Chi tiết báo lỗi
    </h3>

    <div class="card p-4">
        <dl class="row">
            <dt class="col-sm-3">Tiêu đề:</dt>
            <dd class="col-sm-9">@Model.FaultReport.Title</dd>

            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.FaultReport.Description</dd>

            <dt class="col-sm-3">Người báo:</dt>
            <dd class="col-sm-9">@Model.FaultReport.UserName (@Model.FaultReport.UserEmail)</dd>

            <dt class="col-sm-3">Điểm sạc:</dt>
            <dd class="col-sm-9">#@Model.FaultReport.PointId - @Model.FaultReport.PointPortType</dd>

            <dt class="col-sm-3">Trạm:</dt>
            <dd class="col-sm-9">@Model.FaultReport.StationName</dd>

            <dt class="col-sm-3">Mức độ:</dt>
            <dd class="col-sm-9">@Model.FaultReport.Severity / 5</dd>

            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                @if (Model.FaultReport.Status == "open")
                {
                    <span class="badge bg-warning text-dark">Open</span>
                }
                else
                {
                    <span class="badge bg-secondary">Closed</span>
                }
            </dd>

            <dt class="col-sm-3">Thời gian báo:</dt>
            <dd class="col-sm-9">@Model.FaultReport.ReportTime.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        @if (Model.FaultReport.Status == "open")
        {
            <form method="post" asp-page-handler="Close">
                <input type="hidden" asp-for="FaultReport.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-xmark"></i> Đóng báo lỗi
                </button>
            </form>
        }

        <a asp-page="Edit" asp-route-id="@Model.FaultReport.Id" class="btn btn-warning mt-2">
            <i class="fa-solid fa-pen"></i> Chỉnh sửa
        </a>
        <a asp-page="Index" class="btn btn-secondary mt-2">Quay lại</a>
    </div>
</div>