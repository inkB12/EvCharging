@page
@model EVCharging.Pages.Staff.Sessions.IndexModel
@{
    ViewData["Title"] = "Danh sách Phiên sạc";
}

<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">
            <i class="fas fa-bolt me-2"></i> @ViewData["Title"]
        </h4>
    </div>
    <div class="card-body">

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-warning">@TempData["Message"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Khách hàng</th>
                        <th>Điểm sạc (ID)</th>
                        <th>Thời gian đặt</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th style="width: 150px;">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var session in Model.Sessions)
                    {
                        <tr>
                            <td>@session.UserFullName</td>
                            <td><strong>@session.PointId</strong> (@session.PointPortType)</td>
                            <td>@session.BookTime.ToString("g")</td>
                            <td>
                                @if (session.Status == "Booked")
                                {
                                    <span class="badge bg-secondary">Đã đặt</span>
                                }
                                else if (session.Status == "Charging")
                                {
                                    <span class="badge bg-primary">Đang sạc</span>
                                }
                                else if (session.Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@session.Status</span>
                                }
                            </td>
                            <td>
                                @if (session.TotalCost.HasValue)
                                {
                                    <strong class="text-success">@session.TotalCost.Value.ToString("N0") VND</strong>
                                }
                            </td>
                            <td>
                                @if (session.Status == "Completed")
                                {
                                    <a href="#" class="btn btn-success btn-sm">
                                        <i class="fas fa-dollar-sign me-1"></i> Tính tiền
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>