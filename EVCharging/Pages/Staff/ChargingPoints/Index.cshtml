@page "/staff/chargingpoints"
@model EVCharging.Pages.Staff.ChargingPoints.IndexModel
@{
    Layout = "_LayoutStaff"; // Đã liên kết với Layout Staff
    ViewData["Title"] = "Điểm sạc của Trạm";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h4 class="mb-4">
    Tổng quan Trạm: <span class="text-primary">@Model.StationName</span>
</h4>

<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-primary bg-primary bg-opacity-10 rounded p-3 me-3">
                    <i class="fas fa-charging-station"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Tổng số điểm</h6>
                    <h2 class="fw-bold mb-0">@Model.TotalPoints</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-success bg-success bg-opacity-10 rounded p-3 me-3">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Sẵn sàng</h6>
                    <h2 class="fw-bold mb-0">@Model.AvailablePoints</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-info bg-info bg-opacity-10 rounded p-3 me-3">
                    <i class="fas fa-bolt"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Đang sạc</h6>
                    <h2 class="fw-bold mb-0">@Model.ChargingPointsCount</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center">
                <div class="fs-1 text-danger bg-danger bg-opacity-10 rounded p-3 me-3">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">Bị lỗi</h6>
                    <h2 class="fw-bold mb-0">@Model.FaultyPoints</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="mb-0">Chi tiết các Điểm sạc</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">ID Điểm sạc</th>
                        <th>Loại cổng (Port)</th>
                        <th>Tốc độ (kW)</th>
                        <th>Giá (VND/kW)</th>
                        <th class="pe-4">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ChargingPoints.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center p-5 text-muted">
                                <i class="fas fa-search fa-2x mb-3"></i>
                                <h5 class="mb-0">Trạm này chưa có điểm sạc nào.</h5>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.ChargingPoints)
                        {
                            <tr>
                                <td class="ps-4">
                                    <strong class="text-dark">#@item.Id</strong>
                                </td>
                                <td>
                                    <i class="fas fa-plug me-2 text-muted"></i>
                                    @item.PortType
                                </td>
                                <td>@item.ChargingSpeedKw kW</td>
                                <td>@item.Price.ToString("N0") VND</td>
                                <td class="pe-4">
                                    @if (item.Status == "Available")
                                    {
                                        <span class="badge rounded-pill bg-success-subtle text-success-emphasis">
                                            <i class="fas fa-circle-check me-1"></i> Sẵn sàng
                                        </span>
                                    }
                                    else if (item.Status == "Charging")
                                    {
                                        <span class="badge rounded-pill bg-primary-subtle text-primary-emphasis">
                                            <i class="fas fa-bolt me-1"></i> Đang sạc
                                        </span>
                                    }
                                    else if (item.Status == "Faulty")
                                    {
                                        <span class="badge rounded-pill bg-danger-subtle text-danger-emphasis">
                                            <i class="fas fa-triangle-exclamation me-1"></i> Bị lỗi
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge text-success rounded-pill bg-secondary-subtle ">
                                            @item.Status
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
}