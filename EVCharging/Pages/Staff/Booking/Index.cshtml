@page "/staff/booking"
@model EVCharging.Pages.Staff.Booking.IndexModel
@{
    Layout = "_LayoutStaff"; // <-- Đã liên kết
    ViewData["Title"] = "Quản lý Booking";
}

@if (TempData["Info"] is string info)
{
    <div class="alert alert-success">@info</div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<!-- Style cho badge trạng thái -->
<style>
    /* Badge trạng thái: pill + đậm + dễ nhìn */
    .badge-state {
        border-radius: 999px;
        font-weight: 700;
        letter-spacing: .2px;
        padding: 0.5rem 0.75rem;
        box-shadow: 0 2px 8px rgba(0,0,0,.08);
    }
    /* Hiệu ứng ánh sáng nhẹ theo màu */
    .bg-success.badge-state {
        box-shadow: 0 0 18px rgba(25,135,84,.25);
    }

    .bg-primary.badge-state {
        box-shadow: 0 0 18px rgba(13,110,253,.25);
    }

    .bg-danger.badge-state {
        box-shadow: 0 0 18px rgba(220,53,69,.25);
    }

    .bg-secondary.badge-state {
        box-shadow: 0 0 18px rgba(108,117,125,.25);
    }
</style>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="mb-0">
            <i class="fas fa-filter text-primary me-2"></i>
            Bộ lọc tìm kiếm
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="p-3">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold small">Tìm theo từ khóa</label>
                    <input class="form-control" type="text" name="Q" value="@Model.Q" placeholder="Tên trạm, địa chỉ, cổng..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold small">Trạng thái</label>
                    <select class="form-select select2-basic" name="Status" data-placeholder="Chọn trạng thái">
                        <option value="">-- Tất cả --</option>
                        <option value="ongoing" selected="@(Model.Status == "ongoing")">Đang diễn ra (Ongoing)</option>
                        <option value="success" selected="@(Model.Status == "success")">Thành công (Success)</option>
                        <option value="cancelled" selected="@(Model.Status == "cancelled")">Đã hủy (Cancelled)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">Từ ngày</label>
                    <input class="form-control" type="date" name="From" value="@(Model.From?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold small">Đến ngày</label>
                    <input class="form-control" type="date" name="To" value="@(Model.To?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button class="btn btn-primary flex-fill">
                        <i class="fas fa-search me-1"></i> Lọc
                    </button>
                    <a class="btn btn-outline-secondary" href="@Url.Page(null)" title="Reset">
                        <i class="fas fa-sync-alt"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Booking #</th>
                        <th>Trạm sạc</th>
                        <th>Cổng</th>
                        <th>Thời gian</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center p-5 text-muted">
                                <i class="fas fa-search fa-2x mb-3"></i>
                                <h5 class="mb-0">Không tìm thấy lịch đặt nào.</h5>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var x in Model.Items)
                        {
                            <tr>
                                <td class="ps-4">
                                    <strong class="text-dark">@x.BookingId</strong>
                                </td>
                                <td>
                                    <strong class="d-block">@x.StationName</strong>
                                    <small class="text-muted">@x.StationLocation</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@x.PortType</span>
                                    <small class="d-block text-muted mt-1">@x.Price.ToString("N0") ₫/kWh</small>
                                </td>
                                <td>
                                    <i class="far fa-calendar-alt me-1 text-muted"></i>
                                    @((x.StartTime?.ToLocalTime().ToString("dd/MM/yyyy HH:mm")) ?? "-")
                                    <br>
                                    <i class="far fa-clock me-1 text-muted"></i>
                                    @((x.EndTime?.ToLocalTime().ToString("HH:mm")) ?? "-")
                                </td>
                                <td>
                                    @if (x.Status.Equals("success", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-state bg-success text-white">
                                            <i class="fas fa-circle-check me-1"></i> Thành công
                                        </span>
                                    }
                                    else if (x.Status.Equals("ongoing", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-state bg-primary text-white">
                                            <i class="fas fa-bolt me-1"></i> Đang diễn ra
                                        </span>
                                    }
                                    else if (x.Status.Equals("cancelled", StringComparison.OrdinalIgnoreCase))
                                    {
                                        <span class="badge badge-state bg-danger text-white">
                                            <i class="fas fa-circle-xmark me-1"></i> Đã hủy
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-state bg-secondary text-white">
                                            @x.Status
                                        </span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-page="/Staff/Booking/Detail" asp-route-id="@x.BookingId">
                                        <i class="fas fa-eye me-1"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Gắn Select2 vào <select> có class 'select2-basic'
            $('.select2-basic').select2({
                theme: "bootstrap-5",
                placeholder: "Chọn trạng thái",
                allowClear: true
            });
        });
    </script>
}
